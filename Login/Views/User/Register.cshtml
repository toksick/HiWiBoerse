@model Login.Models.Benutzer

@{
    ViewBag.Title = "Index";
    Layout = "";
}
<div id="register">
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        /*
         * bei button2=weiter validieren, bei button4=speichern speichern
         */
        $("form").submit(function (event) {
            var button = event.originalEvent.explicitOriginalTarget;

            if ($(this).valid()) {
                if (button.value == "weiter") {
                    $("#form2").css({ "display": "none" });
                    $("#form3").css({ "display": "block" });
                    return false;
                }
            }
            
        });

        /* 
        * navigiere durch die verschiedenen formularteile
        */
        $("#button1").click(function () {

            $("#form1").css({ "display": "none" });
            $("#form2").css({ "display": "block" });

        });

        $("#button2").click(function () {

        });

        $("#button2back").click(function () {
            $("#form1").css({ "display": "block" });
            $("#form2").css({ "display": "none" });
        });

        $("#button3").click(function () {
            $("#form3").css({ "display": "none" });
            $("#form4").css({ "display": "block" });
        });

        $("#button3back").click(function () {
            $("#form3").css({ "display": "none" });
            $("#form2").css({ "display": "block" });
        });

        $("#button4back").click(function () {
            $("#form4").css({ "display": "none" });
            $("#form3").css({ "display": "block" });
        });
    });
</script>
@using (Html.BeginForm()) {
        @Html.ValidationSummary(true)

        <div class="register" id="form1">
            <p>Ich nutze das System um:</p>
            @Html.RadioButtonFor(model => model.rechte, 0, new { selected = "selected" }) <span class="radioDescription">HiWi</span>
            @Html.RadioButtonFor(Model => Model.rechte, 1) <span class="radioDescription">Veranstalter</span>
            @Html.RadioButtonFor(Model => Model.rechte, 2) <span class="radioDescription">Bearbeiter</span>
            <input type="button" id="button1" value="weiter" />
        </div>
    
        <div class="register" id="form2">
            <div id="name" class="gruppe">
                <h3>Name</h3>
                <div class="input">
                    @Html.LabelFor(model => model.vorname)
                    @Html.EditorFor(model => model.vorname)
                    @Html.ValidationMessageFor(model => model.vorname)
                </div>

                <div class="input">
                    @Html.LabelFor(model => model.nachname)
                    @Html.EditorFor(model => model.nachname)
                    @Html.ValidationMessageFor(model => model.nachname)
                </div>
            </div>

            <div id="adresse" class="gruppe">
                <h3>Adresse</h3>
                <div class="input">
                    @Html.LabelFor(model => model.strasse)
                    @Html.EditorFor(model => model.strasse)
                    @Html.ValidationMessageFor(model => model.strasse)
                </div>

                <div class="input">
                    @Html.LabelFor(model => model.hausnummer)
                    @Html.EditorFor(model => model.hausnummer)
                    @Html.ValidationMessageFor(model => model.hausnummer)
                </div>

                <br />

                <div class="input">
                    @Html.LabelFor(model => model.plz)
                    @Html.EditorFor(model => model.plz)
                    @Html.ValidationMessageFor(model => model.plz)
                </div>

                <div class="input">
                    @Html.LabelFor(model => model.wohnort)
                    @Html.EditorFor(model => model.wohnort)
                    @Html.ValidationMessageFor(model => model.wohnort)
                </div>

                
            </div>

            <div id="uni" class="gruppe">
                <h3>Identifikation</h3>
                <div class="input">
                    @Html.LabelFor(model => model.matrikelnummer)
                    @Html.EditorFor(model => model.matrikelnummer)
                    @Html.ValidationMessageFor(model => model.matrikelnummer)
                </div>
                
                <div class="input">
                    @Html.LabelFor(model => model.studiengang)
                    @Html.EditorFor(model => model.studiengang)
                    @Html.ValidationMessageFor(model => model.studiengang)
                </div>

                <div class="input">
                    @Html.LabelFor(model => model.fachsemester)
                    @Html.EditorFor(model => model.fachsemester)
                    @Html.ValidationMessageFor(model => model.fachsemester)
                </div>
            </div>

            <div id="account" class="gruppe">
                <h3>Account</h3>
                <div class="input">
                    @Html.LabelFor(model => model.email)
                    @Html.EditorFor(model => model.email)
                    @Html.ValidationMessageFor(model => model.email)
                </div>

                <br />

                <div class="input">
                    @Html.LabelFor(model => model.passwort)
                    @Html.PasswordFor(model => model.passwort)
                    @Html.ValidationMessageFor(model => model.passwort)
                </div>

                <div class="input">
                    @Html.LabelFor(model => model.confirmPasswort)
                    @Html.PasswordFor(model => model.confirmPasswort)
                    @Html.ValidationMessageFor(model => model.confirmPasswort)
                </div>
            </div>

            <input type="button" id="button2back" value="zur&uuml;ck" />
            <input type="submit" id="button2" value="weiter" />
        </div>
        <div class="register" id="form3">
            <input type="button" id="button3back" value="zur&uuml;ck" />
            <input type="button" id="button3" value="weiter" />
        </div>
        <div class="register" id="form4">
            <input type="button" id="button4back" value="zur&uuml;ck" />
            <input type="submit" id="button4" value="speichern" />
        </div>
}

</div>
